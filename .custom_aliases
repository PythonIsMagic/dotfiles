# Navigation aliases
alias ~='cd ~'
alias cd-='cd -'
alias ..='cd ..'
alias cd~='cd ~'
alias cd..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
